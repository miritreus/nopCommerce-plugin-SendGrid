@model Nop.Plugin.Misc.SendGridEmailSender.Models.ConfigurationModel

@inject Nop.Core.IWebHelper webHelper

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="SendGridEmailSender" asp-action="Configure" method="post">
	<section class="content">
		<div class="container-fluid">			
				<div class="card card-default">
					<div class="card-body">
						@Html.Raw(string.Format(T("Plugins.Misc.SendGrid.Settings").Text, webHelper.GetStoreLocation()))
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <nop-label asp-for="IsEnabled" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="IsEnabled" />
                            <span asp-validation-for="IsEnabled"></span>
                        </div>
                    </div>
                        
                        <div class="form-group row">
							<div class="col-md-3">
                            <nop-label asp-for="ApiKey" />
							</div>
							<div class="col-md-9">
                            <nop-editor asp-for="ApiKey" />
                            <span asp-validation-for="ApiKey"></span>
							</div>
						</div>
						<div class="form-group row">
                            <div class="col-md-9 offset-md-3">
                                <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                            </div>
						</div>
					</div>
				</div>			
		</div>
	</section>
</form>