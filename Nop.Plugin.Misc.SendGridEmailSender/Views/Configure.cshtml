@model Nop.Plugin.Misc.SendGridEmailSender.Models.ConfigurationModel

@inject Nop.Core.IWebHelper webHelper

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="SendGridEmailSender" asp-action="Configure" method="post">
	<section class="content">
		<div class="container-fluid">			
				<div class="card card-default">
					<div class="card-body">
                    <p>
                        Checklist before enabling this plugin:<br />
                        <br />
                        1. Go to your SendGrid account and create an API key and paste it below.<br />
                        2. Make sure that you register with SendGrid the email addresses from which you want to send emails.<br />
                        3. If there are other plugins that have their own emailsender configured, like for example the Brevo plugin, these will be deactivated, so make sure that is ok. <br />
                        4. Note that the application will restart when you enable this plugin. <br />
                    </p>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <nop-label asp-for="IsEnabled" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="IsEnabled" />
                            <span asp-validation-for="IsEnabled"></span>
                        </div>
                    </div>
                        
                        <div class="form-group row">
							<div class="col-md-3">
                                <nop-label asp-for="ApiKey" />
							</div>
							<div class="col-md-9">
                                <nop-editor asp-for="ApiKey" asp-required="true" html-attributes="@(new { value = Model.ApiKey })" />
                                <span asp-validation-for="ApiKey"></span>
							</div>
						</div>
						<div class="form-group row">
                            <div class="col-md-9 offset-md-3">
                                <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                            </div>
						</div>
					</div>
				</div>			
		</div>
	</section>
</form>